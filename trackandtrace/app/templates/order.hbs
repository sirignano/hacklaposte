      <div class="form-group">
        <input id="end-time" type="time" class="form-control" name="endTime">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 text-center">
      <div class="form-group">
        <input id="s-size" type="number" name="quantity" min="1" max="5" value="0">
