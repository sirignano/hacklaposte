<div class="order">
  <div class="row">
    <div class="col-xs-8">
      <div class="form-group">
        <input id="depart" type="text" class="form-control" placeholder="Départ...">
      </div>
    </div>
    <div class="col-xs-4">
      <div class="form-group">
        <input id="sendfrom" class="btn-choose btn btn-primary" type="button" value="Choisir Relais">
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-8">
      <div class="form-group">
        <input id="arrivee" type="text" class="form-control" placeholder="Arrivée...">
      </div>
    </div>
    <div class="col-xs-4">
      <div class="form-group">
        <input id="sendto" class="btn-choose btn btn-primary" type="button" value="Choisir Relais">
